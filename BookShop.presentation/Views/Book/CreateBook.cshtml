@{
    ViewData["Title"] = "CreateBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4" >
                <form asp-controller="Book" asp-action="CreateBook" enctype="multipart/form-data">
                            <div class="col-sm-12 col-xl-12">
                            <div class="bg-light rounded h-100 p-4">
                                <div class="mb-3">
                                    <label for="Title" class="form-label">Title </label>
                                    <input type="text" class="form-control" name="Title" id="NaTitleme" required>
                                </div>
                                <div class="mb-3">
                                    <label for="Description" class="form-label">Describtion</label>
                                    <input type="text" class="form-control" name="Description" id="Description" required>
                                </div>
                                <div class="mb-3">
                                    <label for="ISBN" class="form-label">ISBN</label>
                                    <input type="text" class="form-control" name="ISBN" id="ISBN" required>
                                </div> 

                                  <div class="row">
                                    <div class="form-group col-md-6">
                                      <label for="Author">Author</label>
                                      <input type="text" class="form-control" id="Author" name="Author">
                                    </div>
                                    <div class="form-group col-md-6">
                                      <label for="inputState">Category</label>
                                      <select id="inputState" class="form-control" name="CategoryId">
                                        <option selected>Choose...</option>
                                        @foreach (var item in Model)
                                        {
                                        <option value="@item.Id">@item.Name</option>
                                        }
                                      </select>
                                    </div>

                                  </div>
                                  <div class="row mt-2">
                                        <div class="form-group col-md-3">
                                          <label for="ISBN">Last Price</label>
                                          <input type="text" class="form-control" id="ISBN" name="LastPrice">
                                        </div>

                                        <div class="form-group col-md-3">
                                          <label for="ISBN"> Price</label>
                                          <input type="text" class="form-control" id="ISBN" name="Price">
                                        </div> 
                                    
                                        <div class="form-group col-md-3">
                                          <label for="ISBN"> Price - 50</label>
                                          <input type="text" class="form-control" id="ISBN" name="Price50">
                                        </div>

                                        <div class="form-group col-md-3">
                                          <label for="ISBN"> Price - 100 </label>
                                          <input type="text" class="form-control" id="ISBN" name="Price100">
                                        </div>
                                        <div class="mb-3 mt-2">
                                            <label for="CoverPhoto" class="form-label">Select Cover Image</label>
                                            <input class="form-control" type="file" id="CoverPhoto" name="CoverPhoto">
                                        </div>
                                  </div>
                                  <div class="modal-footer">
                                      <input type="submit" value=" Upload " class="btn btn-outline-success"/>
                                  </div>

                            </div>
                        </div>
                </form>

</div>

